@using Application.CQRS.DTOs.Admin
@model EventDetailDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    
    <section class="content">

        <div class="card-body">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Edit Event</div>
                </div>
                <div class="ibox-body">
                    <form asp-area="Admin" asp-controller="Event" asp-action="Edit">
                        
                        <div class="form-group">
                            <label>Category</label>
                            <select class="form-control select2-close-mask" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.categories,"Id","Name"))" style="width: 100%;padding:2px">
                                    
                                </select>
                            </div>
                        <div class="form-group">
                            <label>City</label>
                            <select class="form-control select2-close-mask" asp-for="CityId" asp-items="@ViewBag.cities" style="width: 100%;">
                                
                            </select>
                        </div>
                        <div class="form-group">
                                <label>Title</label>
                                <input class="form-control" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input class="form-control" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <input class="form-control" asp-for="Image">
                            </div>
                            
                            <div class="form-group">
                                <label>Address</label>
                                <input class="form-control" asp-for="Adress">
                            </div>
                            <div class="form-group">
                                <label>Capacity</label>
                                <input class="form-control" asp-for="Capacity">
                            </div>
                            <div class="form-group">
                                <label>User</label>
                                <input class="form-control" asp-for="AppUser">
                            </div>
                        <div class="form-group">
                            <label>Ticket Needed</label>
                            <input class="form-control" asp-for="TicketNeeded">
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input class="form-control" asp-for="Price">
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <input class="form-control" asp-for="Status">
                        </div>
                        <div class="form-group">
                            <label>Event Date</label>
                            <input class="form-control" asp-for="EventDate">
                        </div>
                        <div class="form-group">
                            <label>Deadline</label>
                            <input class="form-control" asp-for="ApplicationDeadline">
                        </div>
                        <div class="form-group">
                            <label>Created At</label>
                            <input class="form-control" asp-for="CreatedAt" disabled>
                        </div>
                        <div class="form-group">
                            <label>Updated At</label>
                            <input class="form-control" asp-for="UpdatedAt" disabled>
                        </div>
                        
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Update</button>
                            <a asp-area="Admin" asp-controller="Event" asp-action="Index" class="btn btn-secondary">
                                Back
                            </a>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>

        </section>
    