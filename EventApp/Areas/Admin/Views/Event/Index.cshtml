@using Application.CQRS.DTOs.Admin
@model IEnumerable<EventIndexDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-content fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">Event List</div>
            <div class="ibox-title text-right">
                <a asp-area="Admin" asp-controller="Event" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> &nbsp; Create New Event
                </a>
            </div>
        </div>
        <div class="ibox-body">
            <table class="table table-striped table-bordered table-hover dataTable" id="example-table" cellspacing="0" width="100%" role="grid" aria-describedby="example-table_info" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>City</th>
                        <th>Event Date</th>
                        <th>Status</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>City</th>
                        <th>Event Date</th>
                        <th>Status</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr role="row">
                            <td class="sorting_1">@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.EventCategory</td>
                            <td>@item.EventCity</td>
                            <td>@item.EventDate</td>
                            <td>@item.Status</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-controller="Event" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-secondary mx-2"> <i class="bi bi-search"></i> Details</a>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id"
                                   onclick="return confirm('Are you sure?')" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="example-table_info" role="status" aria-live="polite">Showing 1 to 10 of 36 entries</div></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="example-table_paginate"><ul class="pagination"><li class="paginate_button page-item previous disabled" id="example-table_previous"><a href="#" aria-controls="example-table" data-dt-idx="0" tabindex="0" class="page-link">Previous</a></li><li class="paginate_button page-item active"><a href="#" aria-controls="example-table" data-dt-idx="1" tabindex="0" class="page-link">1</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example-table" data-dt-idx="2" tabindex="0" class="page-link">2</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example-table" data-dt-idx="3" tabindex="0" class="page-link">3</a></li><li class="paginate_button page-item "><a href="#" aria-controls="example-table" data-dt-idx="4" tabindex="0" class="page-link">4</a></li><li class="paginate_button page-item next" id="example-table_next"><a href="#" aria-controls="example-table" data-dt-idx="5" tabindex="0" class="page-link">Next</a></li></ul></div></div></div>
</div>


@section Scripts {
    <!-- PAGE LEVEL PLUGINS-->
    <script src="~/admincast-master/html/dist/assets/vendors/DataTables/datatables.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#example-table').DataTable({
                pageLength: 10,
                //"ajax": './assets/demo/data/table_data.json',
                /*"columns": [
                    { "data": "name" },
                    { "data": "office" },
                    { "data": "extn" },
                    { "data": "start_date" },
                    { "data": "salary" }
                ]*/
            });
        })
    </script>
}