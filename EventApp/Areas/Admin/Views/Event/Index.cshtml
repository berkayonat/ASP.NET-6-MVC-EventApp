@using Application.CQRS.DTOs.Admin
@model IEnumerable<EventDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Title
            </th>
            <th>
                Category
            </th>
            <th>
                City
            </th>
            <th>
                Event Date
            </th>
            <th>
                Status
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.EventCategory
                </td>
                <td>
                    @item.EventCity
                </td>
                <td>
                    @item.EventDate
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Event" asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-secondary mx-2"> <i class="bi bi-search"></i> Details</a>
                    </div>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('Are you sure?')" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>